{
    "version": 2,
    "builds": [
      {
        "src": "nuxt.config.ts",
        "use": "@nuxtjs/vercel-builder",
        "config": {
          "serverFiles": ["server/**"],
          "tsconfigPath": "tsconfig.json"
        }
      }
    ],
    "routes": [
      {
        "src": "/api/.*",
        "headers": {
          "Access-Control-Allow-Origin": "*"
        },
        "continue": true
      },
      {
        "src": "/(.*)",
        "dest": "/"
      }
    ]
  }